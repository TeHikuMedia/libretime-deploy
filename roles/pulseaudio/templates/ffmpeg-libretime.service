[Unit]
Description=FFMPEG-Libretime

[Service]
WorkingDirectory=/var/log/ffmpeg-libretime/
ExecStart=/usr/bin/ffmpeg -report -loglevel warning -f pulse -i 0 -vn -c:a libopus -ab 96K -ac 2 -vbr off -f rtsp rtsp://54.253.11.77:1935/live/{{project_name}}_libretime
User=www-data
Group=www-data
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
